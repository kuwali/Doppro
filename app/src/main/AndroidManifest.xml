<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.awasisto.doppro" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LearnActivity"
            android:label="@string/title_activity_learn"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.awasisto.doppro.MainActivity" />
        </activity>
        <activity
            android:name=".ParamActivity"
            android:label="@string/title_activity_param"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.awasisto.doppro.MainActivity" />
        </activity>
        <activity
            android:name=".SimulatorActivity"
            android:label="@string/title_activity_simulator"
            android:parentActivityName=".ParamActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.awasisto.doppro.ParamActivity" />
        </activity>
    </application>

</manifest>
